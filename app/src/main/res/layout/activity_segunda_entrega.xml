<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaEntrega">

    <Button
        android:id="@+id/botonMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="235dp"
        android:layout_marginBottom="31dp"
        android:onClick="sumar"
        android:text="@string/buttonMas"
        app:layout_constraintBottom_toTopOf="@+id/botonMenos"
        app:layout_constraintEnd_toStartOf="@+id/botonMult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonMenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="235dp"
        android:layout_marginBottom="95dp"
        android:onClick="restar"
        android:text="@string/buttonMenos"
        app:layout_constraintBottom_toTopOf="@+id/textResultado"
        app:layout_constraintEnd_toStartOf="@+id/botonDiv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonMas" />

    <Button
        android:id="@+id/botonDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="235dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="182dp"
        android:onClick="dividir"
        android:text="@string/ButtonDiv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonMenos"
        app:layout_constraintTop_toBottomOf="@+id/botonMult" />

    <Button
        android:id="@+id/botonMult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="235dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="31dp"
        android:onClick="multiplicar"
        android:text="@string/buttonMult"
        app:layout_constraintBottom_toTopOf="@+id/botonDiv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botonMas"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="301dp"
        android:layout_height="62dp"
        android:layout_marginStart="208dp"
        android:layout_marginEnd="222dp"
        android:text="@string/textResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="324dp" />

</androidx.constraintlayout.widget.ConstraintLayout>